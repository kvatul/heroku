<script>
   const currDate=document.getElementById('currDate')
  
   const GetCurDateTime = () => {
        let d = new Date()
        let days=['SUN','MON','TUE','WED','THU','FRI','SAT']
        let mnth=['JAN','FEB','MAR','APR','MAY','JUN','JUL','AUG','SEP','OCT','NOV','DEC']
        let curStat = days[d.getDay()].toString() + ' | '
        curStat = curStat + mnth[d.getMonth()].toString() + ' '+ d.getDate().toString()  
        let hrs= d.getHours() 
        let mins=d.getMinutes()
        mins=(mins<10) ? '0'+mins : mins
        const ampm = ' '+ (hrs  > 11 ) ? 'PM':'AM'
        hrs= (hrs>12) ? hrs-12:hrs
        return `${curStat} | ${hrs}:${mins} ${ampm}`
    }
    currDate.innerHTML=GetCurDateTime()

   </script>


    
